<html>
  <head>
    <meta charset="utf-8">
    <title>Airbnb home</title>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Raleway:300,400,500,700">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- Leave those next 4 lines if you care about users using IE8 -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <!-- Your banner code -->
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('images/background.jpg');">
      <div class="banner-content">
        <h1>hababab</h1>
        <p>bababab habababa</p>
        <div class="form-login">
          <form action="#" class="form-inline">
            <input type="text" class="form-control input-lg" placeholder="arrivée">
            <input type="text" class="form-control input-lg" placeholder="départ">
            <select name="" id="" class="form-control input-lg">
              <option value="1">1 person</option>
              <option value="2">2 persons</option>
              <option value="12">12 pour la partouze</option>
            </select>
            <input type="submit" class="btn btn-primary btn-lg" value="Va chercher Lycos">
          </form>
        </div>
      </div>
    </div>
    <!-- Your features code -->
    <div class="container padded features">
      <div class="row text-center">
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <%= image_tag "/images/globe.png", class: "" %>
          <h2>Discover the world</h2>
          <p>The earth is your new home</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <%= image_tag "/images/dollar.png", class: "" %>
          <h2>Pay online</h2>
          <p>no cash issues anymore</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <%= image_tag "/images/beer.png", class: "" %>
          <h2>Meet people</h2>
          <p>Discover new culture and lifestyle</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <%= image_tag "/images/heart.png", class: "" %>
          <h2>Share and love</h2>
          <p>Join a community you will love</p>
        </div>
      </div>
    </div>
    <!-- Your cards code -->
    <div class="wrapper-grey">
      <div class="container">
        <div class="text-center">
          <h1>Your next trip</h1>
          </div>
        <div class="row">
          <% data.cards.each do |city, infos| %>
            <div class="col-xs-12 col-md-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path ("images/#{infos.picture}") %>');">

             <div class="card-description">
              <h2><%= city.capitalize %></h2>
              <p><%= infos.phrase1 %></p>
              <p><%= infos.phrase2 %></p>
              </div>
              <%= link_to '', '#', class: "card-link" %>
            <%= image_tag infos.avatar, class: "card-user" %>
            </div>
          </div>
        <% end %>
        </div>
        </div>
        </div>
    <div class="container">
      <form action="#" class="padded text-center">
        <div class="row">
          <label for="your-email">Your email</label>
        </div>
        <div class="row">
          <input type="email" id="your-email" placeholder="bob@gmail.com">
          <input type="submit" class="btn-primary" value="Sign In">
        </div>
      </form>
    </div>
    <!-- Your map code -->
    <div class="wrapper">
      <div id="map" style="width: 100%;height: 500px;">
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
        <script type="text/javascript">
        var myLatlng = new google.maps.LatLng(51.515151, 69.696969);
        var myOptions = {
        zoom: 8,
        center: myLatlng,
        scrollwheel: false,
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        styles: [] // TODO: replace [] by array from https://snazzymaps.com/
        };
        var map = new google.maps.Map(document.getElementById('map'), myOptions);
        var marker = new google.maps.Marker({
        position: myLatlng,
        map: map,
        title: "You are here!"
        });
        </script>
      </div>
    </div>
    <!-- Your footer code -->

    <!-- Including Bootstrap JS (with its jQuery dependency) so that dynamic components work -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </body>
</html>
